<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_marginBottom="9dp"
            android:id="@+id/card_n_cont"
            app:cardElevation="3dp"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

       <RelativeLayout android:layout_width="match_parent" android:layout_height="300dp">

               <ImageView
                       android:transitionName="imageTransition"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                        android:id="@+id/card_n_photo"
               />

               <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_margin="8dp"
                       android:layout_alignParentRight="true"
                       app:cardElevation="0dp"

               >
                   <LinearLayout
                           android:layout_marginBottom="5dp"
                           android:id="@+id/card_n_linear_like"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_margin="6dp">

                       <ImageView
                               android:layout_width="27dp"
                               android:layout_height="27dp"
                               android:src="@drawable/ic_thumb_up_24px_outlined"/>

                       <TextView
                               android:fontFamily="@font/exo_med"
                               android:id="@+id/card_n_text_like"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:textSize="20dp"
                               android:layout_marginLeft="7dp"
                               android:textColor="#000"
                       />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>




           <androidx.cardview.widget.CardView
                   android:id="@+id/card_item_name_cont"
                   android:transitionName="cardTransition"
                   app:cardElevation="0dp"
                   app:cardCornerRadius="13dp"
                   android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content">

               <RelativeLayout
                       android:layout_margin="2dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                   <androidx.recyclerview.widget.RecyclerView
                           android:layout_marginBottom="5dp"
                   android:id="@+id/card_n_rec"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   </androidx.recyclerview.widget.RecyclerView>

                   <TextView
                           android:transitionName="nameTransition"
                   android:id="@+id/card_n_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Test"
                   android:textColor="#000"
                   android:textSize="24dp"
                   android:fontFamily="@font/ubuntu_med"
                   android:layout_below="@+id/card_n_rec"
                   android:layout_marginLeft="7dp"
                   android:layout_marginBottom="5dp"
                   />

               </RelativeLayout>
           </androidx.cardview.widget.CardView>


