<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registration.Login">

    <TextView
            android:id="@+id/log_main_text"
            android:fontFamily="@font/exo_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Авторизация"
            android:textSize="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="116dp"
            android:textColor="#000"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Email:"
                android:textColor="#000"
                android:fontFamily="@font/exo_med"/>
        <EditText
                android:id="@+id/log_edit_email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="#B59DFA"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Пароль:"
                android:textColor="#000"
                android:fontFamily="@font/exo_med"/>
        <EditText
                android:id="@+id/log_edit_pas"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="#B59DFA"
        />



    </LinearLayout>


    <androidx.cardview.widget.CardView
            android:id="@+id/login_but_log"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:layout_marginTop="23dp"
            android:layout_width="176dp"
            android:layout_height="64dp"
            app:cardCornerRadius="40dp"
    >
        <FrameLayout
                android:background="#B59DFA"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Войти"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
            />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>