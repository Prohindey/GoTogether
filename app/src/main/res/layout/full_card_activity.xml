<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Full_card_activity">



    <FrameLayout
            android:id="@+id/full_card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>


    <LinearLayout
            android:layout_margin="35dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
                android:id="@+id/full_card_like"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/full_card_but_like"
        />

        <ImageView
                android:id="@+id/full_card_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/full_card_but_people"
        />
    </LinearLayout>
</FrameLayout>